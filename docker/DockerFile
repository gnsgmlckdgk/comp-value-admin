FROM node:18 AS build
WORKDIR /app

COPY package*.json ./
RUN npm ci

COPY package.json . 
COPY .env.production .env
COPY . .
RUN npm run build

FROM nginx:alpine
COPY --from=build /app/dist /usr/share/nginx/html
COPY docker/nginx.conf /etc/nginx/conf.d/default.conf
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
